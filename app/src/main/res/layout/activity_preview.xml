<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviewActivity">

    <SurfaceView
        android:id="@+id/previewSurfaceView"
        android:layout_alignParentRight="true"
        android:layout_width="1dp"
        android:layout_height="1dp" />
    <SurfaceView
        android:id="@+id/resultSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:text="@string/textButtonStart"
        android:id="@+id/buttonStart"
        android:onClick="onStartButtonClicked"
        android:layout_alignBottom="@id/resultSurfaceView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/sharebase_logo"
        android:layout_width="114.7dp"
        android:layout_height="22.0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>
